<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="16dp">

    <!-- Título -->
    <TextView
        android:id="@+id/tituloCuenta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/Cuenta_title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/textPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ID de Cuenta -->
    <TextView
        android:id="@+id/labelIdCuenta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/Cuenta_Id"
        android:textStyle="bold"
        android:textColor="@color/textPrimary"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tituloCuenta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/idCuenta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="12345"
        android:background="#ffffff"
        android:textColor="@color/secondary"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/labelIdCuenta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Nombre de Usuario -->
    <TextView
        android:id="@+id/labelNombreUsuario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/Cuenta_Nombre_User"
        android:textStyle="bold"
        android:textColor="@color/textPrimary"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/idCuenta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/nombreUsuario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Juan Pérez"
        android:background="#ffffff"
        android:textColor="@color/secondary"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/labelNombreUsuario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Saldo -->
    <TextView
        android:id="@+id/labelSaldo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/Cuenta_Saldo_Actual"
        android:textStyle="bold"
        android:textColor="@color/textPrimary"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/nombreUsuario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/saldoCuenta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="$12,345.67"
        android:textStyle="bold"
        android:textColor="@color/primary"
        android:textSize="20sp"
        android:background="#ffffff"
        app:layout_constraintTop_toBottomOf="@id/labelSaldo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Moneda -->
    <TextView
        android:id="@+id/labelMoneda"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/Cuenta_Moneda"
        android:textStyle="bold"
        android:textColor="@color/textPrimary"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/saldoCuenta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/monedaCuenta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="USD"
        android:textColor="@color/secondary"
        android:textSize="18sp"
        android:background="#ffffff"
        app:layout_constraintTop_toBottomOf="@id/labelMoneda"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón Volver -->
    <Button
        android:id="@+id/btnVolver"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/Cuenta_B_Volver"
        android:background="@drawable/btn_rect_secondary"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/monedaCuenta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
